extends base.pug
block content
 .login-div
    .container-login
        form#login.form-login
            h1.form__title Login
            .form__message.form__message--error
            .form__input-group
                input.form__input(type='text' autofocus='' placeholder='Username or email' id="login-email")
                .form__input-error-message
            .form__input-group
                input.form__input(type='password' autofocus='' placeholder='Password' id="login-password")
                .form__input-error-message
            button.form__button(type='submit' id="login-btn") Continue
            p.form__text
                a.form__link(href='#' id="resetPassword") Forgot your password?
            p.form__text
                a#linkCreateAccount.form__link(href='./') Don't have an account? Create account
        form#createAccount.form-login.form--hidden
            h1.form__title Create Account
            .form__message.form__message--error
            .form__input-group
                input#signupUsername.form__input(type='text' autofocus='' placeholder='Username' )
                .form__input-error-message
            .form__input-group
                input.form__input(type='text' autofocus='' placeholder='Email Address' id="signup-email")
                .form__input-error-message
            .form__input-group
                input.form__input(type='password' autofocus='' placeholder='Password' id="signup-password")
                .form__input-error-message
            .form__input-group
                input.form__input(type='password' autofocus='' placeholder='Confirm password' id="confirm-password")
                .form__input-error-message
            button.form__button(type='submit' id="signup-btn") Continue
            p.form__text
                a#linkLogin.form__link(href='./') Already have an account? Sign in
    block script
        script(src='./script/main.js')